programa {
  funcao inicio() {
   // Declaração de varoiaveis. 
   real base, altura, area 

   // Solicitando dados para o usuario.
   escreva(" Digite a area da base: ")
   leia(base)

   escreva(" Digite a area da altura: ")
   leia(altura)

   // Realizar os calculos 
   area = (base * altura) / 2

   // Exibindo resultados.
   escreva ("=== Exibindo resultados ===")
   escreva ("\nBase ", base)
   escreva ("\nAltura ", altura)
   escreva ("\narea ", area )
   
   

  }
}
